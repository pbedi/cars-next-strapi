{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Website pages with hero, carousel, and content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 500
    },
    "hero": {
      "type": "component",
      "repeatable": false,
      "component": "layout.hero"
    },
    "carousel": {
      "type": "component",
      "repeatable": false,
      "component": "layout.carousel"
    },
    "content": {
      "type": "richtext"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "publishedAt": {
      "type": "datetime"
    }
  }
}
