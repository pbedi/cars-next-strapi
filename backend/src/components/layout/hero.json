{
  "collectionName": "components_layout_heroes",
  "info": {
    "displayName": "Hero",
    "description": "Hero section with image/video and text overlay"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "subtitle": {
      "type": "text",
      "maxLength": 500
    },
    "backgroundImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "backgroundVideo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["videos"]
    },
    "ctaText": {
      "type": "string",
      "maxLength": 50
    },
    "ctaLink": {
      "type": "string",
      "maxLength": 255
    },
    "textPosition": {
      "type": "enumeration",
      "enum": ["left", "center", "right"],
      "default": "center"
    },
    "overlay": {
      "type": "boolean",
      "default": true
    }
  }
}
